# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (for server-side operations only)
# NEVER expose this key to the client side
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase JWT Secret (for validating tokens)
SUPABASE_JWT_SECRET=your-jwt-secret

# Database URL (for migrations and direct database access)
DATABASE_URL=your-database-url

# Stack Auth Configuration
NEXT_PUBLIC_STACK_APP_ID=your-stack-app-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-publishable-key
STACK_SECRET_SERVER_KEY=your-secret-server-key
# NEXT_PUBLIC_STACK_BASE_URL=https://app.stack-auth.com

# Resend Configuration (para OTP)
# RESEND_API_KEY=your-resend-api-key

# WhatsApp Business API (opcional)
# WHATSAPP_BUSINESS_TOKEN=your-whatsapp-token
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Rio Porto P2P"

# Email Settings (for Supabase Auth)
NEXT_PUBLIC_SUPPORT_EMAIL=support@rioportop2p.com

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=5242880 # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf